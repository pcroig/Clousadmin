/// Nomina - Payslips
/// Monthly payroll records
model Nomina {
  id         String @id @default(uuid())
  empleadoId String

  // Period
  mes  Int @db.SmallInt // 1-12
  anio Int @db.SmallInt // 2024-2099

  // Amounts
  salarioBruto Decimal @db.Decimal(10, 2)
  deducciones  Decimal @db.Decimal(10, 2)
  salarioNeto  Decimal @db.Decimal(10, 2)

  // Document reference
  documentoId String? @unique // Link to Documento table (PDF)

