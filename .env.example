# ========================================
# CLOUSADMIN - Environment Variables
# ========================================

# DATABASE (REQUIRED)
DATABASE_URL="postgresql://postgres:password@localhost:5432/clousadmin"

# AUTHENTICATION (REQUIRED)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# APP CONFIG (REQUIRED)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# HETZNER OBJECT STORAGE (OPTIONAL - Recommended for production)
# Get credentials from: https://console.hetzner.cloud/projects
STORAGE_ENDPOINT="https://fsn1.your-objectstorage.com"  # e.g., fsn1, nbg1, or hel1
STORAGE_REGION="eu-central-1"
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""
STORAGE_BUCKET=""

# OPENAI (OPTIONAL)
OPENAI_API_KEY=""

# GOOGLE OAUTH (OPTIONAL - For Google Login & Calendar)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# FEATURE FLAGS
ENABLE_AI_EXTRACTION="false"
ENABLE_CLOUD_STORAGE="false"  # Enable Hetzner Object Storage uploads

# CRON JOBS (OPTIONAL - Required for automated task execution)
# Generate with: openssl rand -base64 32
CRON_SECRET=""
# Period in hours before a request is reviewed by AI (default: 48)
SOLICITUDES_PERIODO_REVISION_HORAS="48"

# AI PROVIDERS (At least one required for AI features)
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=""
# Anthropic (Claude)
ANTHROPIC_API_KEY=""
# Google AI (Gemini)
GOOGLE_AI_API_KEY=""
